<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the EditText -->
    <solid android:color="#FFFFFF"/> <!-- You can change this to any color you prefer -->

    <!-- Rounded corners -->
    <corners android:radius="25dp"/> <!-- Adjust the radius to your desired roundness -->

    <!-- Border around the EditText -->
    <stroke android:color="#B0BEC5" android:width="2dp"/> <!-- Optional border -->

    <!-- Optional Shadow Effect (if you want it) -->
    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
</shape>
